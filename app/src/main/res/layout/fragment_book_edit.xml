<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:background="@drawable/bg_main_activity"
    android:keepScreenOn="true"
              android:orientation="vertical"
              android:padding="16dp">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/wordEdit_word"
            android:imeOptions="actionNext"
            android:maxLines="1"
            android:paddingRight="38dp"
            android:singleLine="true"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/transcription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/wordEdit_transcription"
            android:imeOptions="actionNext"
            android:maxLines="1"
            android:paddingRight="38dp"
            android:singleLine="true"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/translate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/wordEdit_translate"
            android:imeOptions="actionNext"
            android:maxLines="1"
            android:paddingRight="38dp"
            android:singleLine="true"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/wordEdit_status"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:drawSelectorOnTop="true"
        android:entries="@array/wordEdit_status_items"/>
</LinearLayout>
</androidx.core.widget.NestedScrollView>